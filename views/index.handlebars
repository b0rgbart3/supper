<h1>Supper!</h1>

<h2>Meals that have not been eaten!</h2>

<ul>
  {{#each meals}}
    {{#unless eaten}}
      {{> meals/meal-block eaten=true}}
    {{/unless}}
  {{/each}}
</ul>


<h2>Meals that have already been eaten!</h2>

<ul>
  {{#each meals}}
    {{#if eaten}}
      {{> meals/meal-block eaten=false}}
    {{/if}}
  {{/each}}
</ul>


<h2>Add a Meal</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Meal Name:</label>
    <input type="text" id="meal_title" name="meal_title">
  </div>

  <div class="form-group">
    <label for="eaten">Eaten?</label><br>
    <input type="radio" name="eaten" value="1" checked> Eaten!<br>
    <input type="radio" name="eaten" value="0">Ready to Make Me Again
  </div>

  <button type="submit">Add Meal</button>
</form>